                <Button Name="btnServiceRequest" Content="Service Request Status" Height="90" Width="400" Margin="94,367,94,43" Background="#feb83f" FontSize="20" FontWeight="Bold"  BorderBrush="#fc6a0c" BorderThickness="3" IsEnabled="False"/>

            </Grid>


        </GroupBox>


    </Grid>
</Window>
